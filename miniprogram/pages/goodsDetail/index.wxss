/* pages/goodsDetail/index.wxss */
.container{
  /* border-bottom: 30rpx solid #f0f0f0; */
  padding-bottom: 130rpx;
}
swiper{
  width: 100%;
  height: 700rpx;
  position: relative;
}
.slide-image{
  width: 100%;
  height: 100%;
  background-position: center;
  background-repeat: no-repeat;
  background-size: auto 100%;
}
.goodsBox{
  position: relative;
  width: 100%;
  height: auto;
  box-sizing: border-box;
  border-bottom: 15rpx solid #f0f0f0;
  padding-bottom: 20rpx;
}
.name{
  font-size: 30rpx;
  color: #000;
  width: 100%;
  margin-top: 25rpx;
  margin-left: 20rpx;
}
.shareTip{
  font-size: 24rpx;
  color: red;
  width: 100%;
  margin-top: 25rpx;
  margin-left: 20rpx;
}
.goodsBox2{
  position: relative;
  width: 100%;
  margin-top: 25rpx;
  margin-left: 20rpx;
  font-size: 24rpx;
}
.price{
  float: left;
  color: red;
  font-weight:bold;
  font-size: 26rpx;
}
.buyNum,.praise{
  float: left;
  color: #666;
  margin-left: 100rpx;
}
.shareBox{
  position:absolute;
  width: 80rpx;
  height: 100rpx;
  top: 15rpx;
  right: 10rpx;
}
.shareIcon{
  width: 100%;
  height: 70rpx;
  background-position: center;
  background-size: auto 100%;
  background-repeat: no-repeat;
}
.shareP{
  font-size: 18rpx;
  color: #000;
  text-align: center;
  width: 100%;
  margin-top: 10rpx;
}
.choose{
  width: 100%;
  height: 90rpx;
  box-sizing: border-box;
  background-position:697rpx center;
  background-size: 18rpx auto;
  background-repeat: no-repeat;
  border-bottom: 15rpx solid #f0f0f0;
  font-size: 24rpx;
  padding-left: 20rpx;
  line-height: 78rpx;
}
.introduce{
  width: 100%;
  height: auto;
  background-color: #fff;
  padding-bottom: 30rpx;
}
.intro_title{
  margin:25rpx auto 35rpx 20rpx;
  width: auto;
  font-size: 24rpx;
  color: #000;
}
.describe{
  width: 90%;
  margin-left: 5rpx;
  font-size: 24rpx;
  color: 	#7B7B7B;
  margin-bottom: 8rpx;
}
.photo{
  width: 96%;
  margin-left: 2%;
  height: auto;
}
.pro_img{
  width: 100%;
}
.evaluateBox{
  border-top: 30rpx solid #f0f0f0;
  width:100%;
  height: auto;
  position: relative;
  margin-bottom: 20rpx;
}
.evalTop{
  width: 100%;
  height: 78rpx;
  font-size: 24rpx;
  color: #000;
  line-height: 78rpx;
  padding-left: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}
.eval_contain{
  width: 100%;
  height: auto;
  position: relative;
}
.eval_avatar{
  width: 90rpx;
  height: 90rpx;
  background-position: center;
  background-size: cover;
  background-repeat: no-repeat;
  margin-left: 10rpx;
  margin-top: 10rpx;
  float: left;
}
.evaluate{
  float: left;
  width: 600rpx;
  margin-left: 20rpx;
  position: relative;
  height: auto;
  padding-top: 10rpx;
  padding-bottom:20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}
.eval_text{
  width: 100%;
  height: auto;
  font-size: 24rpx;
  color: #000;
  margin:10rpx auto;
}
.eval_time,.eval_size,.eval_color{
  float: left;
  font-size: 18rpx;
  color: #6666;
  margin-right: 10rpx;
}
.eval_type{
  width: 100%;
  padding-left: 30rpx;
  float: left;
  height: 35rpx;
  line-height: 35rpx;
  font-size: 24rpx;
  color: #000;
  position: relative;
  margin-bottom: 20rpx;
}
.buttomBox{
  width: 100%;
  height: 90rpx;
  position: fixed;
  bottom: 0;
  background-color: #fff;
  display: flex;
  box-shadow:0 0 8rpx 0 ;
}
.kefu{
  position: relative;
  width: 120rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 20rpx;
  color: #008000;
  box-sizing: border-box;
  background: url("https://cdn.it120.cc/images/weappshop/kefu.png") no-repeat center 15rpx;
  background-size: 55rpx auto;
  line-height: 138rpx;
}
.shopCar{
 position: relative;
  width: 135rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  font-size: 20rpx;
  color: #acacb7;
  box-sizing: border-box;
  background: url("https://cdn.it120.cc/images/weappshop/cart.png") no-repeat center 15rpx; 
  background-size: 44rpx auto;
  line-height: 130rpx;

}
.addCar{
  text-align: center;
  width: 250rpx;
  height: 100%;
  line-height: 90rpx;
  background-color: #ff6850;
  color:#fff;
  font-size: 34rpx;
}
.goBuy{
  text-align: center;
  height: 100%;
  width: 250rpx;
  line-height: 90rpx;
  background-color: #e64340;
  color:#fff;
  font-size: 34rpx;
}
.car_Num{
  font-size: 16rpx;
  position: absolute;
  color:#e64340;
  left: 85rpx;
  top:-45rpx;
}

.show-popup{
  width: 100%;
  height: 100%;
  z-index: 3;
}
.popup-mask{
  width: 100%;
  height: 100%;
  position: fixed;
  background-color: #000;
  opacity: 0.2;
  top: 0;
  left: 0;
}
.popup-contents{
  width: 100%;
  height: auto;
  position: fixed;
  background-color: #fff;
  bottom: 0;
}
.popClose{
  width: 35rpx;
  height: 35rpx;
  background-image: url(https://cdn.it120.cc/images/weappshop/popup-close.png);
  background-size: contain;
  background-repeat: no-repeat;
  position: absolute;
  top: 15rpx;
  right: 20rpx;
  z-index: 5;
}
.pop-goods{
  width: 100%;
  height: 150rpx;
  position: relative;
  border-bottom: 1rpx solid #f0f0f0;
}
.pop_img{
  float: left;
  margin-left: 25rpx;
  width: 90rpx;
  height: 100rpx;
  background-position: center;
  background-size: cover;
  background-repeat: no-repeat;
  margin-top: 30rpx;
}
.pop_goodsName{
  margin-top: 35rpx;
  width: 500rpx;
  float: left;
  margin-left: 20rpx;
  font-size: 24rpx;
  color:#000;
}
.pop_goodsPrice{
  margin-top: 15rpx;
  width: 500rpx;
  float: left;
  margin-left: 20rpx;
  font-size: 24rpx;
  color:red;
}
.pop-color,.pop-size{
  margin-left: 30rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  display: flex;
  flex-direction: row;
  flex-wrap:wrap;
  position: relative;
  border-bottom: 1rpx solid #f0f0f0;
}
.pop_title{
  font-size: 24rpx;
  width: 100%;
  margin-bottom: 15rpx;
}
.goodsColor,.goodsSize{
  margin-right: 20rpx;
  border: 1rpx solid #acacb7;
  padding: 14rpx 20rpx;
  float: left;
  font-size: 24rpx;
  margin-bottom: 10rpx;
}
.goodsColor.active,.goodsSize.active{
  border: 1rpx solid red;
}
.pop-num{
  width:100%;
  height: 120rpx;
  position: relative;
}
.pop_num_title{
  margin-left: 30rpx;
  line-height: 120rpx;
  font-size: 24rpx;
}
.buy-num{
    width: 164rpx;
    height: 48rpx;
    line-height: 48rpx;
    position: absolute;
    right: 60rpx;
    bottom: 40rpx;
    display: flex;
    /*justify-content: space-between;*/
    font-size: 24rpx;
    text-align: center
}
 .buy-num .jian-btn{
    width: 48rpx;
    height: 100%;
    border-left: 1rpx solid #ccc;
    border-bottom: 1rpx solid #ccc;
    border-top: 1rpx solid #ccc;
    border-bottom-left-radius: 6rpx;
    border-top-left-radius: 6rpx;
}
 .buy-num .jian-btn.disabled{
    background-color: #f5f5f9;
    border-left: 1rpx solid #eee;
    border-bottom: 1rpx solid #eee;
    border-top: 1rpx solid #eee;
    color: #ccc;
}
.buy-num .jia-btn{
    width: 48rpx;
    height: 100%;
    border-right: 1rpx solid #ccc;
    border-bottom: 1rpx solid #ccc;
    border-top: 1rpx solid #ccc;
    border-bottom-right-radius: 6rpx;
    border-top-right-radius: 6rpx;
}
.buy-num .jia-btn.disabled{
    background-color: #f5f5f9;
    border-right: 1rpx solid #eee;
    border-bottom: 1rpx solid #eee;
    border-top: 1rpx solid #eee;
    color: #ccc;
}
.buy-num input{
    width: 68rpx;
    height: 48rpx;
    min-height: 48rpx;
    text-align: center;
    font-size: 24rpx;
    border: 1rpx solid #ccc;
}
.popup-join-btn{
  width: 100%;
  height: 89rpx;
  text-align: center;
  line-height: 89rpx;
  font-size:34rpx;
  color:#ffffff;
  background-color: #e64340;
}